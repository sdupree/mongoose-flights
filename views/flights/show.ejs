<%- include('../partials/header') %>
<table class="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= flight.airline %></td>
      <td><%= flight.airport %></td>
      <td><%= flight.flightNo %></td>
      <td<%- flight.hasPassed ? ' class="has-passed"' : '' %>><%= flight.departs %></td>
    </tr>
  </tbody>
</table>
<% if(flight.destinations.length) { %>
<h2>Additional Destinations:</h2>
<table class="list">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Arrives</th>
    </tr>
  </thead>
  <tbody>
    <% flight.destinations.forEach(function(dest) { %>
      <tr>
        <td><%= dest.airport %></td>
        <td><%= dest.arrives %></td>
      </tr>
    <% }); %>
    </tbody>
  </tbody>
</table>
<% } %>
<% if(availableDestinations.length) { %>
<h2>Add New Destination:</h2>
<form method="POST" action="/flights/<%= flight._id %>/destinations">
  <label for="airport">Airport:</label>
  <select name="airport">
    <% availableDestinations.forEach(function(airport) { %>
      <option value="<%= airport %>"><%= airport %></option>
    <% }); %>
  </select>
  <br><br>
  <label>Arrival Time</label>
  <input type="datetime-local" name="arrives">
  <br><br>
  <input type="submit" value="Add Destination">
</form>
<% } %>
<br><br>
<% if(tickets.length) { %>
<h2>Tickets:</h2>
<table class="list">
  <thead>
    <tr>
      <th>Seat</th>
      <th>Price ($)</th>
    </tr>
  </thead>
  <tbody>
    <%- tickets.map(ticket => 
      `<tr><td>${ticket.seat}</td><td>${ticket.price}</td></tr>`
      ).join('') %>
  </tbody>
</table>
<% } %>
<br><br>
<a class="big-a" href="/flights/<%= flight._id %>/tickets/new">Add New Ticket</a>
<%- include('../partials/footer') %>
