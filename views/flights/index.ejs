<%- include('../partials/header') %>
<table class="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departs &nbsp;<a id="sort" href="/flights<%= sort !== 'nat' ? '?sort=nat' : '' %>"><%= sort !== 'nat' ? 'sort natural' : 'sort ascending' %></a></th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(flight) { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td<%- flight.hasPassed ? ' class="has-passed"' : '' %>><%= flight.departs %></td>
        <td><a href="/flights/<%= flight._id %>">Get Details</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
